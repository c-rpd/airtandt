<div class="custom-background"></div>

<%= link_to "Acceuil", root_path, class: "btn btn-warning mt-2"%>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8 text-center">
      <h2 class="text-warning">Tout nos tanks</h2>
    </div>
    <div class="col-2 text-end"></div>
  </div>

  <div class="row mt-4">
    <% @tanks.each do |tank| %>
      <div class="col-4 mb-4">
        <div class="card h-100 rounded">
          <div class="card-img-container" style="height: 200px; overflow: hidden;">
            <%= image_tag tank.picture, class: "card-img w-100 h-100 object-fit-cover rounded-top" %>
          </div>
          <div class="card-body d-flex justify-content-between flex-column" style="height: 320px;">
            <h5 class="card-title h-15 overflow-hidden"><%= tank.name %></h5>
            <p class="card-text h-18 overflow-hidden"><%= tank.description %></p>
            <p class="card-text"><%= tank.rating %>*</p>
            <p class="card-text"><%= tank.price %>$</p>
            <a href="<%= tank_path(tank) %>" class="btn btn-success">Acheter</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>
