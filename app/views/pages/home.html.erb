
<!DOCTYPE html>
<html lang="en">
<body class="custom-background">
<%= link_to "liste des tanks", tanks_path(@tanks)%>
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-2">
      <%# <%= image_tag "logo2.png" %>
    </div>
    <div class="col-8 text-center">
      <h3 class="text-danger">Nos Tanks les plus hype</h3>
    </div>
    <div class="col-2 text-end">
    </div>
  </div>

  <div class="row mt-4">
    <% @tanks.each do |tank| %>
    <div class="col-4">
      <div class="card">
        <%= image_tag tank.picture %>
        <div class="card-body">
          <h5 class="card-title"><%= tank.name %></h5>
          <p class="card-text"><%= tank.description %></p>
          <p class="card-text"><%= tank.rating %>(imagine une Ã©toile)</p>
          <p class="card-text"><%= tank.price %>$</p>
          <a href="#" class="btn btn-success"><%= link_to "Acheter", tank_path(tank)%></a>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
